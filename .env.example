# Database
DATABASE_URL="postgresql://user:password@localhost:5432/gots_db?schema=public"
# For Vercel/serverless: add ?connection_limit=1 to avoid pool exhaustion
# Example: postgresql://user:pass@host:5432/db?schema=public&connection_limit=1

# Site URL — used for sitemap, robots.txt, canonical URLs, and OpenGraph metadata
# Local: http://localhost:3000
# Production: https://guardiansofthespear.com
